generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PG_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
}

enum ShipmentStatus {
  INCOMING_SHIPMENT
  WAREHOUSE_RECEIVED
  WAREHOUSE_DEPARTED
  DELIVERED
  CANCELLED
}

model Shipments {
  id           String       @id @default(uuid())
  shipmentId   String
  Route String[]
  LastWarehouseId String?
  DepartureWarehouseId String
  DepartureAddress String?
  DestinationWarehouseId String
  DestinationAddress String
  CreatedBy Int
  OwnerId Int
  Status ShipmentStatus
  TotalWeight Float
  TotalVolume Float
  SpecialInstructions String?
  CreatedAt DateTime
  UpdatedAt DateTime
  FromWarehouseId String
  ToWarehouseId String
  DeliveryTime DateTime?
}
